<!--pages/bind/bind.wxml-->
<image class='banner' mode='widthFix' src="{{banner}}" />
<view class='title-box border-box'>
    <view class='title font-32 border-box'>
        填写用户信息
    </view>
</view>
<view class='info border-box white-bg'>
    <view class='info-list border-box padding-lr-30 padding-tb-40 font-28 flex align-center'>
        <view class='info-key'>
            手机号：
        </view>
        <view class='info-value border-box'>
            <text wx:if='{{info.phone}}'>{{info.phone}}</text>
            <input else bindinput='inputPhone' class='info-input border-box' maxlength='11' type="number" placeholder="请输入手机号" />
        </view>
    </view>
    <view class='info-list border-box padding-lr-30 padding-tb-40 font-28 flex align-center'>
        <view class='info-key'>
            学生姓名：
        </view>
        <view class='info-value border-box'>
            <text wx:if='{{info.name}}'>{{info.name}}</text>
            <input else bindinput='inputName' class='info-input border-box' type="text" placeholder="请输入学生姓名" />
        </view>
    </view>
    <view class='info-list border-box padding-lr-30 padding-tb-40 font-28 flex align-center'>
        <view class='info-key'>
            年龄：
        </view>
        <view class='info-value border-box'>
            <text wx:if='{{info.age}}'>{{info.age}}</text>
            <input else bindinput='inputAge' class='info-input border-box' type="number" placeholder="请输入年龄" />
        </view>
    </view>
    <view class='info-list border-box padding-lr-30 padding-tb-40 font-28 flex align-start'>
        <view class='info-key'>
            地址：
        </view>
        <view class='info-value border-box'>
            <text wx:if='{{info.address}}'>{{info.address}}</text>
            <input else bindinput='inputAddress' class='info-input border-box' type="text" placeholder="请输入地址" />
        </view>
    </view>
</view>
<view class='btn-box padding-lr-30 border-box'>
    <button wx:if='{{useInfo.phone && useInfo.name && useInfo.age && useInfo.address}}' class='submit submit-end my-btn white-color font-34 font-weight flex justify-center align-center margin-b-30'>信息已提交成功</button>
    <button else open-type='getUserInfo' bindgetuserinfo='submitUseInfo' class='submit my-btn white-color font-34 font-weight flex justify-center align-center margin-b-30'>提交</button>
</view>

